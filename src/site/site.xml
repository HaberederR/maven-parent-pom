<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

  <bannerLeft>
    <name>Maven Sites for eXo Project</name>
    <src>http://repository.exoplatform.org/images/header_branding.png</src>
    <href>${exo.site.base.url}</href>
  </bannerLeft>

  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.3.0</version>
  </skin>

  <publishDate format="yyyy-MM-dd" position="right"/>
  <version position="right"/>

  <googleAnalyticsAccountId>UA-13124591-7</googleAnalyticsAccountId>

  <body>
    <breadcrumbs>
      <item name="Maven Sites for eXo Project" href="${exo.site.base.url}"/>
      <item name="${project.name}" href="${site.url}"/>
    </breadcrumbs>

    <!-- Menus that every project will inherit -->
    <menu ref="reports" inherit="bottom"/>

  </body>

  <custom>
    <fluidoSkin>
      <topBarEnabled>false</topBarEnabled>
      <sideBarEnabled>true</sideBarEnabled>
      <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
      <googleSearch>
        <sitesearch/>
      </googleSearch>
    </fluidoSkin>
  </custom>
</project>
