<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

  <bannerLeft>
    <name>${project.name}</name>
    <src>/images/logo-exo.png</src>
    <href>http://sites.exoplatform.org</href>
  </bannerLeft>

  <skin>
    <groupId>org.exoplatform.maven.skins</groupId>
    <artifactId>maven-exo-skin</artifactId>
    <version>2-SNAPSHOT</version>
  </skin>

  <publishDate format="yyyy-MM-dd" position="right"/>
  <version position="right"/>

  <body>
    <head>
      <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-13124591-7']);
        _gaq.push(['_trackPageview']);

        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') +
        '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

      </script>
    </head>

    <!-- Breadcrumbs that every project will inherit -->
    <breadcrumbs>
      <item name="eXo Platform" href="http://www.exoplatform.com/"/>
      <item name="Maven sites" href="http://sites.exoplatform.org/"/>
    </breadcrumbs>

    <!-- Menus that every project will inherit -->
    <menu ref="reports" inherit="bottom"/>

  </body>
</project>